<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="TennisBettingWinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Tennis Betting System">

    <!-- Main Container -->
    <Grid Background="{StaticResource BgDarkBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ========== LEFT SIDEBAR ========== -->
        <Border Grid.Column="0" Background="{StaticResource BgNavyBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- App Logo/Title -->
                <StackPanel Grid.Row="0" Padding="24,24,24,20">
                    <StackPanel Orientation="Horizontal" Spacing="14">
                        <Border Background="{StaticResource AccentGradientBrush}"
                                CornerRadius="12" Width="44" Height="44">
                            <FontIcon Glyph="&#xE8D4;" FontSize="20" Foreground="White"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="TENNIS BETTING" FontSize="13" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}" CharacterSpacing="60"/>
                            <TextBlock Text="PRO SYSTEM" FontSize="11"
                                       Foreground="{StaticResource AccentCyanBrush}" CharacterSpacing="80"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Quick Stats in Sidebar -->
                <Border Grid.Row="1" Background="{StaticResource BgCardBrush}"
                        CornerRadius="12" Margin="16,0,16,16" Padding="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,0,12">
                            <TextBlock Text="+12.45u" FontSize="20" FontWeight="Bold"
                                       Foreground="{StaticResource SuccessGreenBrush}"/>
                            <TextBlock Text="Total P/L" FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,0,12">
                            <TextBlock Text="+5.8%" FontSize="20" FontWeight="Bold"
                                       Foreground="{StaticResource SuccessCyanBrush}"/>
                            <TextBlock Text="ROI" FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="0" Grid.Row="1">
                            <TextBlock Text="247" FontSize="20" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Total Bets" FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Grid.Row="1">
                            <TextBlock Text="38.2%" FontSize="20" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Win Rate" FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Navigation Menu -->
                <StackPanel Grid.Row="2" Padding="12,0" Spacing="2">
                    <TextBlock Text="NAVIGATION" FontSize="10" Foreground="{StaticResource TextMutedBrush}"
                               Margin="12,0,0,10" CharacterSpacing="100"/>

                    <Button Style="{StaticResource NavButton}" Background="{StaticResource BgCardBrush}">
                        <Grid Width="200">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                                <Border Background="{StaticResource AccentGradientBrush}" CornerRadius="8" Width="32" Height="32">
                                    <FontIcon Glyph="&#xE80F;" FontSize="14" Foreground="White"
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Dashboard" VerticalAlignment="Center"
                                           Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                            </StackPanel>
                            <Border Grid.Column="2" Background="{StaticResource AccentPinkBrush}" CornerRadius="4" Padding="6,2">
                                <TextBlock Text="23" FontSize="10" Foreground="White" FontWeight="Bold"/>
                            </Border>
                        </Grid>
                    </Button>

                    <Button Style="{StaticResource NavButton}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border Background="{StaticResource BgGlassBrush}" CornerRadius="8" Width="32" Height="32">
                                <FontIcon Glyph="&#xE9D9;" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Value Bets" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource NavButton}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border Background="{StaticResource BgGlassBrush}" CornerRadius="8" Width="32" Height="32">
                                <FontIcon Glyph="&#xE9D9;" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Bet History" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource NavButton}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border Background="{StaticResource BgGlassBrush}" CornerRadius="8" Width="32" Height="32">
                                <FontIcon Glyph="&#xE9F5;" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Analytics" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource NavButton}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border Background="{StaticResource BgGlassBrush}" CornerRadius="8" Width="32" Height="32">
                                <FontIcon Glyph="&#xE77B;" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Players DB" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource NavButton}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border Background="{StaticResource BgGlassBrush}" CornerRadius="8" Width="32" Height="32">
                                <FontIcon Glyph="&#xE713;" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Settings" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Connection Status -->
                <Border Grid.Row="3" Background="{StaticResource BgCardBrush}"
                        CornerRadius="12" Margin="16" Padding="14">
                    <StackPanel Spacing="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                <Ellipse Width="8" Height="8" Fill="{StaticResource SuccessGreenBrush}"/>
                                <TextBlock Text="LIVE" FontSize="10" FontWeight="Bold"
                                           Foreground="{StaticResource SuccessGreenBrush}"/>
                            </StackPanel>
                            <TextBlock Grid.Column="1" Text="09:42:15" FontSize="10"
                                       Foreground="{StaticResource TextMutedBrush}" FontFamily="Consolas"/>
                        </Grid>
                        <StackPanel Spacing="4">
                            <TextBlock Text="Betfair: MAnley92" FontSize="11"
                                       Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                            <TextBlock Text="Odds API: 176 calls remaining" FontSize="10"
                                       Foreground="{StaticResource TextMutedBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- ========== MAIN CONTENT ========== -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Padding="28" Spacing="24">

                <!-- ========== TOP BAR: Title + Actions ========== -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Spacing="2">
                        <TextBlock Text="Dashboard" Style="{StaticResource PageTitle}"/>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="Last updated:" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/>
                            <TextBlock Text="25 Jan 2026, 09:42:15" FontSize="11"
                                       Foreground="{StaticResource TextSecondaryBrush}" FontFamily="Consolas"/>
                            <Border Background="{StaticResource SuccessGreenBrush}" CornerRadius="3"
                                    Padding="6,2" Margin="4,0,0,0">
                                <TextBlock Text="LIVE" FontSize="9" Foreground="White" FontWeight="Bold"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                        <Button Style="{StaticResource SecondaryButton}" Padding="14,10">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE896;" FontSize="14"/>
                                <TextBlock Text="Export"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SecondaryButton}" Padding="14,10">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE72C;" FontSize="14"/>
                                <TextBlock Text="Refresh"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource PrimaryButton}" Padding="14,10">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE710;" FontSize="14"/>
                                <TextBlock Text="Capture Odds"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- ========== MAIN STATS ROW ========== -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Big P/L Card with Sparkline -->
                    <Border Grid.Column="0" Style="{StaticResource GradientCard}" Margin="0,0,12,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Spacing="8">
                                <TextBlock Text="Total Profit/Loss" FontSize="12" Foreground="#ffffffaa"/>
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <TextBlock Text="+12.45" FontSize="42" FontWeight="Bold" Foreground="White"/>
                                    <TextBlock Text="units" FontSize="14" Foreground="#ffffffaa"
                                               VerticalAlignment="Bottom" Margin="0,0,0,8"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Border Background="#ffffff25" CornerRadius="4" Padding="8,4">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon Glyph="&#xE70E;" FontSize="10" Foreground="#22d3ee"/>
                                            <TextBlock Text="+2.31u today" FontSize="11" Foreground="White"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Background="#ffffff25" CornerRadius="4" Padding="8,4">
                                        <TextBlock Text="5.8% ROI" FontSize="11" Foreground="White"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>

                            <!-- Sparkline Placeholder -->
                            <Border Grid.Column="1" Width="120" Height="60" Margin="12,0,0,0">
                                <Canvas>
                                    <!-- Simulated sparkline using polyline -->
                                    <Polyline Points="0,50 15,45 30,48 45,30 60,35 75,20 90,25 105,15 120,10"
                                              Stroke="#22d3ee" StrokeThickness="2" Opacity="0.8"/>
                                    <Polyline Points="0,50 15,45 30,48 45,30 60,35 75,20 90,25 105,15 120,10"
                                              Stroke="#22d3ee" StrokeThickness="8" Opacity="0.1"/>
                                </Canvas>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Win Rate -->
                    <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="0,0,12,0">
                        <StackPanel Spacing="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Win Rate" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <Border Grid.Column="1" Background="#062d1b" CornerRadius="4" Padding="6,2">
                                    <TextBlock Text="+2.1%" FontSize="10" Foreground="{StaticResource SuccessGreenBrush}"/>
                                </Border>
                            </Grid>
                            <TextBlock Text="38.2%" FontSize="32" FontWeight="Bold"
                                       Foreground="{StaticResource SuccessCyanBrush}"/>
                            <TextBlock Text="94 wins / 153 losses" FontSize="11"
                                       Foreground="{StaticResource TextMutedBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Pending Bets -->
                    <Border Grid.Column="2" Style="{StaticResource StatCard}" Margin="0,0,12,0">
                        <StackPanel Spacing="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Pending" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <Ellipse Grid.Column="1" Width="8" Height="8" Fill="{StaticResource WarningYellowBrush}"/>
                            </Grid>
                            <TextBlock Text="23" FontSize="32" FontWeight="Bold"
                                       Foreground="{StaticResource WarningYellowBrush}"/>
                            <TextBlock Text="£45.20 at risk" FontSize="11"
                                       Foreground="{StaticResource TextMutedBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Today -->
                    <Border Grid.Column="3" Style="{StaticResource StatCard}">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Today" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Text="+2.31u" FontSize="32" FontWeight="Bold"
                                       Foreground="{StaticResource SuccessGreenBrush}"/>
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="3W" FontSize="11" Foreground="{StaticResource SuccessGreenBrush}"/>
                                <TextBlock Text="-" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/>
                                <TextBlock Text="1L" FontSize="11" Foreground="{StaticResource DangerRedBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- ========== QUICK FILTERS + PENDING BETS ========== -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="320"/>
                    </Grid.ColumnDefinitions>

                    <!-- Recent Activity Table -->
                    <Border Grid.Column="0" Style="{StaticResource GlassCard}" Padding="0" Margin="0,0,16,0">
                        <StackPanel>
                            <!-- Header -->
                            <Grid Padding="20,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="RECENT BETS" Style="{StaticResource SectionHeader}"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                    <Border Background="{StaticResource BgGlassBrush}" CornerRadius="6" Padding="10,6">
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <TextBlock Text="All" FontSize="11" Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <FontIcon Glyph="&#xE70D;" FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Background="{StaticResource BgGlassBrush}" CornerRadius="6" Padding="10,6">
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <TextBlock Text="This Week" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <FontIcon Glyph="&#xE70D;" FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Grid>

                            <!-- Table Header -->
                            <Grid Padding="20,12" Background="{StaticResource BgGlassBrush}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="TIME" FontSize="10" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextMutedBrush}" CharacterSpacing="80"/>
                                <TextBlock Grid.Column="1" Text="MATCH" FontSize="10" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextMutedBrush}" CharacterSpacing="80"/>
                                <TextBlock Grid.Column="2" Text="ODDS" FontSize="10" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextMutedBrush}" CharacterSpacing="80"/>
                                <TextBlock Grid.Column="3" Text="STAKE" FontSize="10" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextMutedBrush}" CharacterSpacing="80"/>
                                <TextBlock Grid.Column="4" Text="P/L" FontSize="10" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextMutedBrush}" CharacterSpacing="80" HorizontalAlignment="Right"/>
                            </Grid>

                            <!-- Rows -->
                            <Grid Padding="20,14" BorderBrush="{StaticResource GlassBorderBrush}" BorderThickness="0,0,0,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="09:30" FontSize="12" FontFamily="Consolas"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="M. Keys vs J. Pegula" FontSize="12" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="AUS Open • M. Keys" FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                                </StackPanel>
                                <TextBlock Grid.Column="2" Text="2.48" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Grid.Column="3" Text="1.5u" FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <Border Grid.Column="4" Background="#2d2006" CornerRadius="4" Padding="8,4" HorizontalAlignment="Right">
                                    <TextBlock Text="PENDING" FontSize="9" FontWeight="Bold"
                                               Foreground="{StaticResource WarningYellowBrush}"/>
                                </Border>
                            </Grid>

                            <Grid Padding="20,14" BorderBrush="{StaticResource GlassBorderBrush}" BorderThickness="0,0,0,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Yesterday" FontSize="12"
                                           Foreground="{StaticResource TextMutedBrush}"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="B. Shelton vs L. Sonego" FontSize="12" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="AUS Open • B. Shelton" FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                                </StackPanel>
                                <TextBlock Grid.Column="2" Text="1.42" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Grid.Column="3" Text="2.0u" FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Column="4" Text="+0.84u" FontSize="12" FontWeight="Bold"
                                           Foreground="{StaticResource SuccessGreenBrush}" HorizontalAlignment="Right"/>
                            </Grid>

                            <Grid Padding="20,14" BorderBrush="{StaticResource GlassBorderBrush}" BorderThickness="0,0,0,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Yesterday" FontSize="12"
                                           Foreground="{StaticResource TextMutedBrush}"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="H. Matsuoka vs J. Delaney" FontSize="12" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Challenger • H. Matsuoka" FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                                </StackPanel>
                                <TextBlock Grid.Column="2" Text="1.38" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Grid.Column="3" Text="1.2u" FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Column="4" Text="-1.20u" FontSize="12" FontWeight="Bold"
                                           Foreground="{StaticResource DangerRedBrush}" HorizontalAlignment="Right"/>
                            </Grid>

                            <Grid Padding="20,14">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Yesterday" FontSize="12"
                                           Foreground="{StaticResource TextMutedBrush}"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="E. Rybakina vs E. Mertens" FontSize="12" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="AUS Open • E. Rybakina" FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                                </StackPanel>
                                <TextBlock Grid.Column="2" Text="1.19" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Grid.Column="3" Text="3.5u" FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Column="4" Text="+0.67u" FontSize="12" FontWeight="Bold"
                                           Foreground="{StaticResource SuccessGreenBrush}" HorizontalAlignment="Right"/>
                            </Grid>

                            <!-- View All Link -->
                            <Border Padding="20,14" Background="{StaticResource BgGlassBrush}">
                                <TextBlock Text="View all 247 bets →" FontSize="12"
                                           Foreground="{StaticResource AccentCyanBrush}" HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Right Panel: Model Stats + Upcoming -->
                    <StackPanel Grid.Column="1" Spacing="16">

                        <!-- Model Performance -->
                        <Border Style="{StaticResource GlassCard}">
                            <StackPanel Spacing="16">
                                <TextBlock Text="MODEL PERFORMANCE" Style="{StaticResource SectionHeader}"/>

                                <!-- Model bars -->
                                <StackPanel Spacing="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="36"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="M2" FontSize="12" FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <Border Grid.Column="1" Background="{StaticResource BgGlassBrush}"
                                                CornerRadius="4" Height="8" HorizontalAlignment="Stretch">
                                            <Border Background="{StaticResource SuccessGreenBrush}"
                                                    CornerRadius="4" Width="180" HorizontalAlignment="Left"/>
                                        </Border>
                                        <TextBlock Grid.Column="2" Text="+8.2%" FontSize="12" FontWeight="Bold"
                                                   Foreground="{StaticResource SuccessGreenBrush}" HorizontalAlignment="Right"/>
                                    </Grid>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="36"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="M4" FontSize="12" FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <Border Grid.Column="1" Background="{StaticResource BgGlassBrush}"
                                                CornerRadius="4" Height="8" HorizontalAlignment="Stretch">
                                            <Border Background="{StaticResource SuccessCyanBrush}"
                                                    CornerRadius="4" Width="140" HorizontalAlignment="Left"/>
                                        </Border>
                                        <TextBlock Grid.Column="2" Text="+5.4%" FontSize="12" FontWeight="Bold"
                                                   Foreground="{StaticResource SuccessCyanBrush}" HorizontalAlignment="Right"/>
                                    </Grid>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="36"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="M1" FontSize="12" FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <Border Grid.Column="1" Background="{StaticResource BgGlassBrush}"
                                                CornerRadius="4" Height="8" HorizontalAlignment="Stretch">
                                            <Border Background="{StaticResource SuccessGreenBrush}"
                                                    CornerRadius="4" Width="100" HorizontalAlignment="Left"/>
                                        </Border>
                                        <TextBlock Grid.Column="2" Text="+3.1%" FontSize="12" FontWeight="Bold"
                                                   Foreground="{StaticResource SuccessGreenBrush}" HorizontalAlignment="Right"/>
                                    </Grid>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="36"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="M5" FontSize="12" FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <Border Grid.Column="1" Background="{StaticResource BgGlassBrush}"
                                                CornerRadius="4" Height="8" HorizontalAlignment="Stretch">
                                            <Border Background="{StaticResource DangerRedBrush}"
                                                    CornerRadius="4" Width="50" HorizontalAlignment="Left"/>
                                        </Border>
                                        <TextBlock Grid.Column="2" Text="-2.3%" FontSize="12" FontWeight="Bold"
                                                   Foreground="{StaticResource DangerRedBrush}" HorizontalAlignment="Right"/>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Upcoming Matches -->
                        <Border Style="{StaticResource GlassCard}">
                            <StackPanel Spacing="14">
                                <Grid>
                                    <Grid.ColumnDefinitions>
