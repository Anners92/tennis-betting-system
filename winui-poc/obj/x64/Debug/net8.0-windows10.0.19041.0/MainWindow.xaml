                                                <TextBlock Text="1.37 → Zhou" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <TextBlock Text="View all value bets →" FontSize="11"
                                           Foreground="{StaticResource AccentCyanBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- ========== BOTTOM ROW: Performance by Category ========== -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- By Tour Level -->
                    <Border Grid.Column="0" Style="{StaticResource GlassCard}" Margin="0,0,8,0">
