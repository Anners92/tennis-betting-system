                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="3.00+" FontSize="12" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Grid.Column="1" Text="+1.8%" FontSize="12" FontWeight="Bold"
                                               Foreground="{StaticResource SuccessCyanBrush}"/>
