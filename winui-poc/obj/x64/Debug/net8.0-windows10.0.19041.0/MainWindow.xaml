                                </StackPanel>
                            </Grid>
                            <Border Background="{StaticResource BgGlassBrush}" CornerRadius="6" Padding="10,8">
                                <TextBlock Text="Worst: 5L (Jan 12)" FontSize="11"
                                           Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
